<h1>Listing irregularities</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Author</th>
      <th>Fire number</th>
      <th>Fire name</th>
      <th>Tailnumber</th>
      <th>Operation</th>
      <th>Narrative</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @irregularities.each do |irregularity| %>
      <tr>
        <td><%= irregularity.date %></td>
        <td><%= irregularity.author %></td>
        <td><%= irregularity.fire_number %></td>
        <td><%= irregularity.fire_name %></td>
        <td><%= irregularity.tailnumber %></td>
        <td><%= irregularity.operation_id %></td>
        <td><%= irregularity.narrative %></td>
        <td><%= link_to 'Show', irregularity %></td>
        <td><%= link_to 'Edit', edit_irregularity_path(irregularity) %></td>
        <td><%= link_to 'Destroy', irregularity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

