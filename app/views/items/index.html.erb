<h1>Listing items</h1>

<table>
  <tr>
    <th>Item</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.description %></td>
    <td><%= link_to 'Show', item_path(item) %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= button_to 'Destroy', item_path(item), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

