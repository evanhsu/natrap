<div style="width:50%; margin:0 auto 0 5em; float:left;">
  <h1 style="text-align:left;display:block;">Certificates for <%= @person.fullname %></h1>
  <table style="width:100%;border:none">
    <tr>
      <td style="text-align:left;"><%= editable ? (link_to "Back to Profile", admin_person_url(@person)):(link_to "Back to Profile",person_url(@person)) %></td>
      <td style="text-align:right;"><%= link_to "Upload a New Certificate", new_admin_person_certificate_url(@person) if editable %></td>
    </tr>
  </table>
  <table class="alternating_rows" style="width:100%;border:2px solid #555555;">
    <tr>
      <th style="width:4em;">View</th>
      <th>Certificate</th>
      <th style="width:5em;">Download</th>
    </tr>

    <% item_count = 0%>
  <% @certificates.each do |certificate| %>
    <% item_count += 1 %>
    <% item_count % 2 == 0 ? evenodd = "class='evn'":evenodd = "class='odd'" %>
    <tr <%= evenodd %>>
      <td style="text-align:center;"><%= link_to image_tag("magnifying_glass.png", :title => "View Details"), editable ?  admin_certificate_path(certificate) : certificate_path(certificate) %></td>
      <td><%= certificate.name %> <%= "(#{certificate.year})" unless certificate.year.blank? %></td>
      <td style="text-align: center;"><%= link_to image_tag("download.png", :title => "Download"), download_attachment_for_certificate_url(certificate) %></td>
    </tr>
  <% end %>
  </table>
</div>
